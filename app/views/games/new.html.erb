<div class="grid-container">
  <div class="sidebar">
    <div class="console">
      <%= button_to "Save and Log Out", new_user_url, method: "get", style: "float: left; margin: 3%" %>
      <p style="margin: 3%"><strong><%= current_user.name %></strong></p>
      <%= form_for :move, url: move_games_url, remote: true, authenticity_token: true do |f| %>
        <%= f.text_field :content, id: "move-input", autocomplete: "off", autofocus: "true", style: "width: 90%; display: block; margin: 0 auto 3% auto; font-size: 16px;", data: {textarea: "move"} %>
        <%= f.submit "send", style: "display: none;", data: {send: "move"} %>
      <% end %>
      <div id="moves">
      </div>
    </div>
    <div class="program-info">
      <p><strong>Mode:</strong></p>
      <div id="selected-mode"></div>
      <p><strong>Selected:</strong></p>
      <div id="selected-program"></div>
    </div>
  </div>
  
  <div class="game">
    <div class="grid" id="game-grid" style="grid-template-areas: '<%= [*0..9].map{"a"}.join " "%>'">
    </div> 
  </div> 
</div>

<script>
  connect()
  keypress("<%= move_games_url %>")
</script>

